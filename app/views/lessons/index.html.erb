<!-- This is index for: lessons -->
<% provide(:title, "Lessons") %>

<div class="row mt-5">
    <div class="col py-auto text-center">
        <h1>Lessons</h1>
    </div>
</div>

<div class="row my-3">
    <% @categories.each do |category| %>
        <div class="col-6 mt-2">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col font-weight-bold">
                            <%= category.title %>
                        </div>
                        <div class="col py-auto align-self-center">
                            <% if category.lessons.find_by(user_id: current_user.id) %>
                                <div class="d-flex justify-content-center justify-content-md-end">
                                    <div class="score">
                                        <%= "Score: #{category.lessons.find_by(user_id: current_user.id).result} out of #{category.words.count}" %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="card-body d-flex flex-column" style="height: 150px;">
                    <div class="row">
                        <div class="col">
                            <%= category.description %>
                        </div>
                    </div>
                    <div class="row mt-auto bd-highlight">
                        <div class="col py-auto align-self-center">
                            <div class="d-flex justify-content-center justify-content-md-end">
                                <% if category.lessons.find_by(user_id: current_user.id) %>
                                    <%= link_to "See results", lesson_path(category.lessons.first.id), class: "btn brown-btn w-10" %>
                                <% else%>
                                    <% if category.words.any? %>
                                        <%= link_to "Start lesson", lessons_path(user_id: current_user.id, category_id: category.id), method: :post, class: "btn yellow-btn w-10" %>
                                    <% else %>
                                        <div style="color: #C9443A; opacity: 0.8;">Unavailable</div>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
<div class="row justify-content-center">
    <%= will_paginate @categories %>
</div>


